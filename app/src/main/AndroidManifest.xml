        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.authentication.ForgetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activity.authentication.SignUpActivity"
            android:exported="false"
