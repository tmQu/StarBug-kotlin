<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <CheckBox
        android:layout_gravity="center"
        android:buttonTint="@color/colorSecondPrimary"
        android:id="@+id/promotion_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="5dp"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:strokeWidth="0.5dp"
        android:layout_margin="5dp"
        app:strokeColor="@color/black"
        app:cardCornerRadius="15dp"
        >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/bg_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:alpha="0.2"
                    android:elevation="0dp"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:id="@+id/promo_name"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Khuyến mãi tháng 3"

                    android:textSize="20sp"
                    android:fontFamily="@font/bungee"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:shadowColor="@color/colorPrimary"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    />
                <LinearLayout
                    android:id="@+id/promo_description"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/promo_name"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Discount "
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:shadowColor="@color/colorPrimary"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"/>
                    <TextView
                        android:id="@+id/promo_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="10%"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/bungee"
                        android:textColor="@color/colorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="on total bill"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:shadowColor="@color/colorPrimary"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/promo_min_price"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/promo_description"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:shadowColor="@color/colorPrimary"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    />

                <TextView
                    android:id="@+id/promo_date"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="remain in 3 day"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/promo_min_price"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:fontFamily="@font/bangers"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>





    </com.google.android.material.card.MaterialCardView>
</LinearLayout>